<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Data Binding Warmup</title>
    <script type="text/javascript">
      // Challenge #1
      // start with the code from 04.html
      // using setInterval, make it so that if you change window.pizzaSize in Chrome dev tools
      // the pizzaSize inputs and labels will change with it
          // document.getElementById('pizza-size').value = window.pizzaSize;
          // document.getElementById('display-size').innerHTML = window.pizzaSize;

      document.addEventListener('DOMContentLoaded', function(loaded) {
        window.pizzaSize='';
        window.pizzaCrust='';
        var inputFieldsArray = document.querySelectorAll('input[data-bind]');
        for (var i = 0; i < inputFieldsArray.length; i++) {
          inputFieldsArray[i].addEventListener('keyup', function (keyEvent) {
           window[keyEvent.target.dataset.bind] = keyEvent.target.value;
            var datas = document.querySelectorAll('[data-bind='
                                   + keyEvent.target.dataset.bind
                                                        + ']');
            for (var j = 0 ; j < datas.length ; j++) {
              console.log(window[keyEvent.target.dataset.bind]);
              datas[j].innerHTML = window[keyEvent.target.dataset.bind]; 
              datas[j].value = window[keyEvent.target.dataset.bind];
            }
          })
        }
        
        setInterval(function (_) {
          document.getElementById('pizza-size').value = window.pizzaSize;
          document.querySelector('[data-bind=pizzaSize]:not(input)').innerHTML = window.pizzaSize;
          document.getElementById('pizza-crust').innerHTML = window.pizzaCrust;
          document.getElementById('pizza-size-2').value = window.pizzaSize;
          document.getElementById('pizza-crust-2').innerHTML = window.pizzaCrust;
          for(var m = 0 ; m < )
          document.querySelector('[data-bind=pizzaCrust]:not(input)').innerHTML = window.pizzaCrust;
        }, 1000)
      })
    </script>
  </head>
  <body>
    <fieldset>
      <legend>Pizza Size</legend>
      <p>
        <label for="pizza-size">What size would you like your pizza?</label>
        <input type="text" id="pizza-size" name="size" value="" data-bind="pizzaSize">
      </p>
      <p>
        <strong>Size: </strong>
        <span data-bind="pizzaSize"></span>
      </p>
    </fieldset>
    <fieldset>
      <legend>Crust</legend>
      <p>
        <label for="pizza-crust">What crust would you like your pizza?</label>
        <input type="text" id="pizza-crust" name="size" value="" data-bind="pizzaCrust">
      </p>
      <p>
        <strong>Crust: </strong>
        <span data-bind="pizzaCrust"></span>
      </p>
    </fieldset>
    <fieldset>
      <legend>Pizza Size</legend>
      <p>
        <label for="pizza-size-2">What size would you like your pizza?</label>
        <input type="text" id="pizza-size-2" name="size" value="" data-bind="pizzaSize">
      </p>
      <p>
        <strong>Size: </strong>
        <span data-bind="pizzaSize"></span>
      </p>
    </fieldset>
    <fieldset>
      <legend>Crust</legend>
      <p>
        <label for="pizza-crust-2">What crust would you like your pizza?</label>
        <input type="text" id="pizza-crust-2" name="size" value="" data-bind="pizzaCrust">
      </p>
      <p>
        <strong>Crust: </strong>
        <span data-bind="pizzaCrust"></span>
      </p>
    </fieldset>
  </body>
</html>
