// do not remove this line...you're going to need it for your addAnimal method
var Animal = require("./animal");

function Zoo(name, location){
  this.name = name;
  this.location = location;
  this.status = 'closed';
  this.animals = [];
}

Zoo.prototype.changeLocation = function(newLocation){
  this.location = newLocation;
};
Zoo.prototype.open = function() {
  this.status = 'open';
}
Zoo.prototype.close = function() {
  this.status = 'closed';
}
Zoo.prototype.isOpen = function() {
  if(this.status == 'open') {
    return "Open!";
  }
  return null;
} // why does this not return a boolean?
Zoo.prototype.addAnimal = function(incomingAnimal) {
  if (this.status == 'open'
     && (incomingAnimal instanceof Animal)
     && (this.animals.indexOf(incomingAnimal) == -1)) {
    this.animals.push(incomingAnimal);
    return true;
  }
  else {
    return false;
  } 
}
Zoo.prototype.removeAnimal = function(outgoingAnimal) {
  if(this.isOpen() == 'Open!') {
    this.animals.splice(this.animals.indexOf(outgoingAnimal), 1);
    return true;
  } 
  return false;
}
  
module.exports=Zoo;
