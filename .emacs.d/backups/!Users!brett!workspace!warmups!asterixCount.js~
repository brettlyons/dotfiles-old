function countAsterix(inputString) {
  return inputString.split('').reduce(function (count, currentChar) {
    return (currentChar == '*') ? ++count : count;
  }, 0);
}

function findBiggestCount(inputString, sortFn) {
  return inputString.split(' ').map(countAsterix).sort(sortFn)[0];
}
function largestSort(a,b) {
  return b - a;
} // just to make the findBiggestCount look better

console.log("TEST: 3 ? ", findBiggestCount("*** *** **"));
console.log("TEST: 4 ? ", findBiggestCount("*** *** **** *"));
console.log("TEST: 2 ? ", findBiggestCount("* **"));
