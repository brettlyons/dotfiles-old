extends layout

block content
  h1= title
    p Welcome to #{title}
    p
      form(method='POST' action="/signup")
        label(for=loginEmail) Email Address for Login
        input(type='email' name='loginEmail')
        p
        label(for=loginPass) Password For Login
        input(type='password', name='loginPass')
        p
          input(type='submit' value='Sign in')
    p
      ul
        if(errors)
          for error in errors
            li #{error}
